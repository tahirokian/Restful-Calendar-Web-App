<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Calendar Application Login</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
  <script src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js'></script>
  <script src='/javascripts/login.js'></script>
  <style>
    .container { background:#808070; color:#FFFFFF; }
    body { padding-top:30px; }
    a { color:#FFFFFF;font-weight:bold; }
  </style>
</head>
<body>
  <div class="container">
    <div class="col-sm-6 col-sm-offset-3">
      <h1 class="text-center"><span class="fa fa-sign-in"></span> Login</h1>
      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
      <% } %>
      <!-- LOGIN FORM -->
      <div id="loginform">
      <form>
        <div class="form-group">
          <label>Username:</label>
          <input type="text" id="username" class="form-control" name="username">
        </div>
        <div class="form-group">
          <label>Password:</label>
          <input type="password" id="password" class="form-control" name="password">
        </div>
        <button type="submit" id="loginbtn" class="btn btn-default btn-lg center-block"><span class="fa fa-sign-in"></span> Login</button>
      </form>
      </div>
      <hr>
      <p>Need an account? <a href="/signup">Signup</a></p>
      <p>Or go to <a href="/">Main</a>.</p>
    </div>
  </div>
</body>
</html>
